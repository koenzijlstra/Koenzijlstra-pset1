<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.koen.koenzijlstra_pset1.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:id="@+id/textView" />


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true">

        <CheckBox
            android:text="Arms"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/armscheck"
            android:layout_alignTop="@+id/Ears"
            android:layout_toRightOf="@+id/Ears"
            android:layout_toEndOf="@+id/Ears"
            android:layout_alignBottom="@+id/Ears" />

        <CheckBox
            android:text="Mouth"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:id="@+id/mouthcheck"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/checkBox8"
            android:layout_toEndOf="@+id/checkBox8"
            android:layout_below="@+id/checkBox7" />

        <CheckBox
            android:text="Shoes"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkBox4"
            android:layout_toLeftOf="@+id/checkBox5"
            android:id="@+id/shoescheck"
            android:layout_alignLeft="@+id/checkBox4"
            android:layout_alignStart="@+id/checkBox4"
            android:layout_row="2"
            android:layout_column="0" />

        <CheckBox
            android:text="Mustache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mustachecheck"
            android:layout_below="@+id/body"
            android:layout_toRightOf="@+id/checkBox4"
            android:layout_toEndOf="@+id/checkBox4"
            android:layout_row="1"
            android:layout_column="0" />

        <CheckBox
            android:text="Nose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkBox5"
            android:layout_toRightOf="@+id/checkBox6"
            android:id="@+id/Nose"
            android:layout_alignRight="@+id/checkBox5"
            android:layout_alignEnd="@+id/checkBox5" />

        <CheckBox
            android:text="Mouth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkBox6"
            android:layout_toLeftOf="@+id/checkBox7"
            android:id="@+id/mouthcheck"
            android:layout_alignLeft="@+id/checkBox6"
            android:layout_alignStart="@+id/checkBox6"
            android:layout_row="2"
            android:layout_column="1" />

        <CheckBox
            android:text="Glasses"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/glassescheck"
            android:layout_alignTop="@+id/earscheck"
            android:layout_toRightOf="@+id/body"
            android:layout_toEndOf="@+id/body"
            android:layout_row="3"
            android:layout_column="0" />

        <CheckBox
            android:text="Eyes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/eyescheck"
            android:layout_below="@+id/body"
            android:layout_alignLeft="@+id/checkBox2"
            android:layout_alignStart="@+id/checkBox2"
            android:layout_toLeftOf="@+id/checkBox"
            android:layout_toStartOf="@+id/checkBox"
            android:layout_row="3"
            android:layout_column="1" />

        <CheckBox
            android:text="Ears"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="121dp"
            android:id="@+id/earscheck"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/textView"
            android:layout_toEndOf="@+id/textView"
            android:layout_row="4"
            android:layout_column="0" />

        <CheckBox
            android:text="Eyebrows"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/eyebrowscheck"
            android:layout_alignTop="@+id/checkBox2"
            android:layout_toRightOf="@+id/checkBox2"
            android:layout_toEndOf="@+id/checkBox2"
            android:layout_above="@+id/checkBox4"
            android:layout_row="4"
            android:layout_column="1" />

    </GridLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/eyebrows"
            android:id="@+id/eyebrows"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/arms"
            android:id="@+id/arms"
            android:layout_alignParentTop="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/body"
            android:id="@+id/body"
            android:adjustViewBounds="false"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ears"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/ears"
            android:background="l" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/mouth"
            android:id="@+id/mouth"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/mustache"
            android:id="@+id/mustache"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/nose"
            android:layout_alignTop="@+id/ears"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="34dp"
            android:id="@+id/nose" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/hat"
            android:id="@+id/hat"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/eyes"
            android:id="@+id/eyes"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/shoes"
            android:id="@+id/shoes"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/glasses"
            android:layout_alignTop="@+id/imageView6"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:id="@+id/glasses" />
    </RelativeLayout>


